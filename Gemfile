source 'http://rubygems.org'

# framework
gem 'rails', '3.1.0'
gem 'rake', '0.9.2'

# data
gem 'pg'

# auth
gem 'devise'

# ui
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end
